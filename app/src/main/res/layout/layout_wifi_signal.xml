<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.0dp"
        android:src="@drawable/wifi_lock"/>

    <ImageView
        android:id="@+id/signal_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wifi_common_wifi_1"/>

    <TextView
        android:id="@+id/signal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signal_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="100%"
        android:textColor="@color/gray_707070"
        android:textSize="10.0sp" />

</RelativeLayout>